{
    "version": 2,
    "builds": [
      {
        "src": "ecom/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb",
          "runtime": "python3.9",
          "installCommand": "pip install --no-cache-dir --no-deps -r requirements.txt",
          "includeFiles": ["ecom/**/*", "requirements.txt"],
          "excludeFiles": ["**/*.pyc", "**/*.pyo", "**/__pycache__/**"]
        }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "ecom/wsgi.py"
      },
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      }
    ]
}
